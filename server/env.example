# Azure OpenAI Configuration (기존)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT=gpt-4-mini

# Azure Search Configuration (기존)
AZURE_SEARCH_API_KEY=your_azure_search_api_key
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net

# Azure Storage Configuration (기존)
AZURE_STORAGE_CONNECTION_STRING=your_storage_connection_string

# Exaone Configuration (새로 추가)
# Friendli 토큰은 https://suite.friendli.ai/tokens 에서 발급 가능
FRIENDLI_TOKEN=your_friendli_token_here
EXAONE_MODEL=LGAI-EXAONE/EXAONE-4.0.1-32B
EXAONE_MAX_TOKENS=1000
EXAONE_TEMPERATURE=0.7
EXAONE_TIMEOUT=30000

# AI Provider Configuration (새로 추가)
# 'azure' 또는 'exaone' 중 선택
AI_PROVIDER=exaone
# 스트림 기능 활성화
ENABLE_STREAMING=true
# Exaone 실패 시 Azure로 자동 전환
ENABLE_FALLBACK=true

# Session Configuration (기존)
SESSION_SECRET=your-secret-key-change-in-production
ADMIN_KEY=your-admin-key

# Server Configuration (기존)
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000